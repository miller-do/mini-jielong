.model-shade{
  position:absolute;
  left: 0;
  top: 0;
  z-index: 9;
  width: 100%;
  height: 100%;
  /* background-color: rgba(56, 56, 56, 0.6); */
}
.model-container{
  width: 380rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -190rpx;
  margin-top: -80rpx;
  z-index: 9;
  font-size: 22rpx;
  /* width: 100%;
  height: 100%; */
  /* background-color: rgba(71, 71, 71,.6); */
}
.model-content-wrap{
  width: 100%;
  background-color: rgb(128, 120, 115);
  border-radius: 8rpx;
  padding: 16rpx 22rpx;
  box-shadow: 1px 1px 6px #fff;
  box-sizing: border-box;
}
.model-title{
  padding-bottom: 6rpx;
  padding-left: 10rpx;
  color: #ccc;
  font-weight: bold;
  border-bottom: 1rpx solid #ccc;
}
.model-content{
  padding: 12rpx 0;
  color: #ccc;
}
.model-btns{
  padding-top: 20rpx;
}
.btn-img{
  width: 160rpx;
  height: 80rpx;
}
