/* components/model-fail/model-fail.wxss */
.page-container{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(71, 71, 71,.6);
}
.content-wrap{
  width: 100%;
  height: 100%;
}
.fc{
  display: flex;
  align-items: center;
  justify-content: center;
}
.text-wrap{
  border: 1px solid rgb(247, 211, 11);
}
.text-content{
  font-size: 20rpx;
  font-weight: 600;
  color: #fff;
  padding-top: 20rpx;
  text-align: center;
}
.over-result{
  padding: 10rpx 0;
  text-align: center;
  font-size: 40rpx;
  font-weight: 600;
  text-shadow: 2px 3px 1px #fff;
  color: rgb(247, 211, 11);
}
.btn-group{
  margin-top: 40px;
  display: flex;
  justify-content: space-around;
}
.game-info{
  padding: 20rpx 40rpx;
  color: #fff;
  font-style:italic
}
.desc{
  color: #999;
  padding: 20rpx;
  font-size: 12rpx;
  font-weight: 500;
  text-shadow: 0 0 0 #fff;
}