/* components/model-fail/model-fail.wxss */
.page-container{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
  width: 100%;
  height: 100%;
  background-color: rgba(71, 71, 71,.6);
}
.content-wrap{
  width: 100%;
  height: 100%;
}
.fc{
  display: flex;
  align-items: center;
  justify-content: center;
}
.gif-img{
  position: absolute;
  z-index: 0;
}
.text-wrap{
  border: 1px solid rgb(247, 211, 11);
}
.text-content{
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  padding-top: 20rpx;
  text-align: center;
}
.over-result{
  padding: 10rpx 0;
  text-align: center;
  font-size: 80rpx;
  font-weight: 600;
  text-shadow: 2px 3px 1px #fff;
  color: rgb(247, 211, 11);
}
.desc{
  color: #999;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-shadow: 0 0 0 #fff;
}
.btn-group{
  margin-top: 40px;
  display: flex;
  justify-content: space-around;
  position: relative;
  z-index: 9;
}
.game-info{
  position: absolute;
  top: 100rpx;
  left: -300rpx;
  width: 100%;
  text-align: center;
  color: #fff;
  /* font-style:italic; */
  padding: 20rpx 40rpx;
  background-color: rgba(236, 52, 52, 0.6);
  transform:rotate(-35deg);
}
